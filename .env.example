# ===========================================
# ALMIRA BACKEND - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Application
APP_NAME=Almira
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-min-32-chars-here

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Supabase Configuration
SUPABASE_URL=https://nltzetpmvsbazhhkuqiq.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Database (Direct connection for migrations)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.nltzetpmvsbazhhkuqiq.supabase.co:5432/postgres

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_TYPES=["image/jpeg","image/png","image/webp"]

# Email (Supabase handles auth emails, this is for custom emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Payment (Razorpay - for future integration)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Logging
LOG_LEVEL=INFO
